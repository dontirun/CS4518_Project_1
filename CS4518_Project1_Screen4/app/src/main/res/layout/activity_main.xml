<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#000"
    tools:context="com.example.arun.cs4518_project1_screen4.MainActivity"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dip"
        android:weightSum="6"
        android:id="@+id/linearLayout"
        >

        <Button
            android:text="Search"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:id="@+id/search"
            android:layout_alignParentStart="true"
            android:layout_width="0dip"
            android:backgroundTint="#777"
            android:textColor="#FFF"
            android:textSize="8sp"

            android:layout_weight="1" />

        <Button
            android:text="Clear"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/search"
            android:id="@+id/clear1"
            android:backgroundTint="#777"
            android:textColor="#FFF"
            android:textSize="8sp"

            android:layout_weight="1" />

        <Button
            android:text="Import Contacts"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/clear1"
            android:id="@+id/importContacts"
            android:backgroundTint="#777"
            android:textColor="#FFF"
            android:textSize="8sp"

            android:layout_weight="2" />

        <Button
            android:text="Export All"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/importContacts"
            android:id="@+id/export"
            android:backgroundTint="#777"
            android:textColor="#FFF"
            android:textSize="8sp"

            android:layout_weight="1.5" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/divide"
        android:weightSum="4"
        android:layout_below="@+id/linearLayout"
        android:layout_marginTop="20dip"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_below="@+id/linearLayout"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:weightSum="9">

            <TextView
                android:text="Name:"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:layout_below="@+id/linearLayout"
                android:layout_alignParentStart="true"
                />

            <TextView
                android:text="Phone:"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Phone"
                android:layout_below="@+id/textView2"
                android:layout_alignParentStart="true" />

            <TextView
                android:text="Email:"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Phone"
                android:layout_alignParentStart="true"
                android:id="@+id/textView3" />

            <TextView
                android:text="Address 1:"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                android:layout_below="@+id/textView3"
                android:layout_alignParentStart="true" />

            <TextView
                android:text="Address 2:"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView4"
                android:layout_alignParentStart="true"
                android:id="@+id/textView5" />

            <TextView
                android:text="City:"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView5"
                android:layout_alignParentStart="true"
                android:id="@+id/textView6" />

            <TextView
                android:text="State:"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView6"
                android:layout_alignParentStart="true"
                android:id="@+id/textView7" />

            <TextView
                android:text="Country:"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView8"
                android:layout_below="@+id/textView7"
                android:layout_alignParentStart="true" />

            <TextView
                android:text="Zip Code:"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView8"
                android:layout_alignParentStart="true"
                android:id="@+id/textView9" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dip"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:weightSum="9">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:layout_weight="1"
                android:textColor="#fff"
                android:backgroundTint="#DDD"
                android:id="@+id/editName" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:ems="10"
                android:layout_weight="1"
                android:textColor="#fff"
                android:backgroundTint="#DDD"
                android:id="@+id/editPhone" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:layout_weight="1"
                android:textColor="#fff"
                android:backgroundTint="#DDD"
                android:id="@+id/editEmail" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPostalAddress"
                android:ems="10"
                android:layout_weight="1"
                android:textColor="#fff"
                android:backgroundTint="#DDD"
                android:id="@+id/editAdd1" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPostalAddress"
                android:ems="10"
                android:layout_weight="1"
                android:textColor="#fff"
                android:backgroundTint="#DDD"
                android:id="@+id/EditAdd2" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:layout_weight="1"
                android:textColor="#fff"
                android:backgroundTint="#DDD"
                android:id="@+id/editCity" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/editState"
                android:textColor="#fff"
                android:backgroundTint="#DDD"
                android:layout_weight="1" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:layout_weight="1"
                android:textColor="#fff"
                android:backgroundTint="#DDD"
                android:id="@+id/editCountry" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:layout_weight="1"
                android:textColor="#fff"
                android:backgroundTint="#DDD"
                android:id="@+id/editZip" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dip"
        android:weightSum="6"
        android:layout_below="@+id/divide"
        android:id="@+id/linearLayout2"
        >

        <Button
            android:text="Create"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:id="@+id/create"
            android:layout_alignParentStart="true"
            android:layout_width="0dip"
            android:backgroundTint="#777"
            android:textColor="#FFF"
            android:textSize="8sp"

            android:layout_weight="1" />

        <Button
            android:text="Update"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/search"
            android:id="@+id/update"
            android:backgroundTint="#777"
            android:textColor="#FFF"
            android:textSize="8sp"

            android:layout_weight="1" />

        <Button
            android:text="Delete"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/clear1"
            android:id="@+id/delete"
            android:backgroundTint="#777"
            android:textColor="#FFF"
            android:textSize="8sp"

            android:layout_weight="1" />

        <Button
            android:text="Clear"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/importContacts"
            android:id="@+id/clear2"
            android:backgroundTint="#777"
            android:textColor="#FFF"
            android:textSize="8sp"

            android:layout_weight="1.5" />

    </LinearLayout>


</LinearLayout>
